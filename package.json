{
  "name": "better",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "asb build factory/index.ts -d build/release --target factory",
    "build:debug": "asb --target debug",
    "test": "asp --nologo",
    "build:contract:bountydao": "asb build bountydao/index.ts -d build/release --target bountydao",
    "build:contract": "node compile.js",
    "build:contract:debug": "node compile.js --debug",
    "dev:deploy:contract": "near dev-deploy",
    "deploy:contract": "near deploy --accountId chezhe.testnet --wasmFile build/release/better.wasm",
    "deploy": "npm run build && npm run deploy:contract",
    "prestart": "npm run build:contract:debug && npm run dev:deploy:contract"
  },
  "dependencies": {
    "near-sdk-as": "3.1.0"
  },
  "devDependencies": {
    "shelljs": "^0.8.4"
  }
}
